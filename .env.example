# HYDRA Configuration - Copy to .env and fill in values

# =============================================================================
# EXCHANGE API KEYS (Required for live trading)
# =============================================================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_TESTNET=true

# =============================================================================
# LLM PROVIDERS (Required for Layer 3 LLM Agent)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GROQ_API_KEY=your_groq_api_key

# Groq is default - fastest inference for trading (llama-3.3-70b-versatile)
# Options: groq, anthropic, openai
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile

# =============================================================================
# ON-CHAIN DATA PROVIDERS
# =============================================================================
GLASSNODE_API_KEY=your_glassnode_api_key
COINGLASS_API_KEY=your_coinglass_api_key

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/hydra
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
TRADING_MODE=paper
MAX_LEVERAGE=10

# PERMITTED PAIRS (fixed universe - cannot be changed)
# cmt_btcusdt, cmt_ethusdt, cmt_solusdt, cmt_dogeusdt,
# cmt_xrpusdt, cmt_adausdt, cmt_bnbusdt, cmt_ltcusdt
# 
# To trade a subset, specify comma-separated:
# SYMBOLS=cmt_btcusdt,cmt_ethusdt,cmt_solusdt
SYMBOLS=cmt_btcusdt,cmt_ethusdt,cmt_solusdt,cmt_dogeusdt,cmt_xrpusdt,cmt_adausdt,cmt_bnbusdt,cmt_ltcusdt
MAX_POSITION_SIZE_USD=10000
RISK_PER_TRADE_PCT=1.0

# =============================================================================
# SYSTEM
# =============================================================================
LOG_LEVEL=INFO
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
